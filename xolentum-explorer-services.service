[Unit]
Description=Gunicorn instance to serve Xolentum Explorer Utils
After=network.target

[Service]
User=sohamb03
Group=www-data # "nginx" on CentOS

WorkingDirectory=/home/sohamb03/xolentum-explorer-utils/api/
Environment="PATH=/home/sohamb03/.local/share/virtualenvs/xolentum-explorer-utils-xyz123/bin"
ExecStart=/home/sohamb03/.local/share/virtualenvs/xolentum-explorer-utils-xyz123/bin/gunicorn --workers 9 --bind unix:xolentum-explorer-utils.sock -m 007 wsgi

[Install]
WantedBy=multi-user.target
